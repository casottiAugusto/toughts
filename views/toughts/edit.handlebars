<div class="tought-form-container">
  <a href="/toughts/dashboard" class="btn">Voltar para o Dashboard</a>
  <h1>Editar Pensamento:</h1>
  <form action="/toughts/edit/{{tought.id}}" method="post">
    <input type="hidden" name="id" value="{{tought.id}}" />
    <div class="form-control">
      <label for="title">Título</label>
      <input
        type="text"
        name="title"
        id="title"
        placeholder="Digite o título do pensamento"
        value="{{tought.title}}"
      />
    </div>
    <input type="submit" value="Salvar Alterações" />
  </form>
</div>